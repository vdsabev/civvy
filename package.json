{
  "private": true,
  "name": "civvy",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "webpack -p --env.production --display-modules",
    "profile": "webpack --profile --json > ./build/profile.json && webpack-bundle-analyzer ./build/profile.json",
    "start": "webpack-dev-server --port 3000 --history-api-fallback",
    "deploy": "npm run build && firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "npm run build && firebase deploy --only hosting"
  },
  "dependencies": {
    "@hyperapp/logger": "0.2.1",
    "classwrap": "1.2.1",
    "hyperapp": "0.15.1",
    "var": "0.3.2"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "clean-webpack-plugin": "0.1.17",
    "css-loader": "0.28.7",
    "extract-text-webpack-plugin": "3.0.1",
    "file-loader": "1.1.5",
    "firemail": "1.4.0",
    "html-webpack-plugin": "2.30.1",
    "postcss-cssnext": "3.0.2",
    "postcss-loader": "2.0.7",
    "style-loader": "0.19.0",
    "webpack": "3.7.1",
    "webpack-dev-server": "2.9.1",
    "webpack-null-plugin": "0.0.2",
    "webpack-pwa-manifest": "3.3.2",
    "workbox-webpack-plugin": "2.1.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 3 versions",
              "> 1%"
            ]
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "browser": true,
      "es6": true
    },
    "globals": {
      "process": true
    },
    "parserOptions": {
      "ecmaVersion": 5,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module"
    },
    "rules": {
      "no-unknown-property": false,
      "react/display-name": false
    },
    "settings": {
      "react": {
        "pragma": "h"
      }
    }
  }
}
