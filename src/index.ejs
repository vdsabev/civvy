<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Civvy</title>

    <meta content="text/html; charset=utf-8" http-equiv="content-type">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport">
    <meta content="True" name="HandheldFriendly">
    <meta content="320" name="MobileOptimized">
    <meta content="on" http-equiv="cleartype">

    <% const { primary } = htmlWebpackPlugin.options.style.css; %>
    <meta name="theme-color" content="<%= primary %>">

    <base href="/">
    <link rel="shortcut icon" href="favicon.png">

    <% const values = (obj) => Object.keys(obj).map((key) => obj[key]); %>
    <% const { fonts } = htmlWebpackPlugin.options.style; %>
    <link href="https://fonts.googleapis.com/css?family=<%= values(fonts).map((font) => font.split(/\s+/).join('+')).join('|') %>" rel="stylesheet">
  </head>

  <body>
    <script src="https://use.fontawesome.com/9cbd9f09c2.js" async></script>
  </body>
</html>
